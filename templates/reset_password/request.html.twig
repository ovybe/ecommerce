{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}
{% block headerdiv %}{% endblock %}

{% block body %}
    <div class="container col-md-4 mt-5 bg-white rounded border p-5">
        <div class="row">
            <div class="col-12">
                {% for flash_error in app.flashes('reset_password_error') %}
                    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                {% endfor %}
            </div>
            <div class="text-center">
                <h1>Reset your password</h1>
            </div>
                {{ form_start(requestForm) }}
                <div class="row text-center">
                    {{ form_label(requestForm.email) }}
                </div>
                <div class="row input-group mx-auto rounded ms-1">
                    {{ form_widget(requestForm.email) }}
                </div>
                <div class="mb-3 text-muted text-center">
                    <small>
                        Enter your email address and we will send you a
                        link to reset your password.
                    </small>
                </div>
                <div class="row input-group mb-3 ms-1">
                    <button class="btn btn-outline-primary">Send password reset email</button>
                </div>
                {{ form_end(requestForm) }}
            </div>
    </div>
{% endblock %}
