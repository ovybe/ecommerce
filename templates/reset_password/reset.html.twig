{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}
{% block headerdiv %}{% endblock %}

{% block body %}


    <div class="container col-md-4 mt-5 bg-white rounded border p-5">
        <div class="row">
            <div class="text-center mb-3">
                <h1>Reset your password</h1>
            </div>
            {{ form_start(resetForm) }}
            <div class="row text-center">
                {{ form_errors(resetForm.plainPassword.first) }}
            </div>
            <div class="row text-center">
                {{ form_label(resetForm.plainPassword.first) }}
            </div>
            <div class="row input-group mx-auto rounded ms-1 mb-3">
                {{ form_widget(resetForm.plainPassword.first) }}
            </div>
            <div class="row text-center">
                {{ form_errors(resetForm.plainPassword.second) }}
            </div>
            <div class="row text-center">
                {{ form_label(resetForm.plainPassword.second) }}
            </div>
            <div class="row input-group mx-auto rounded ms-1 mb-3">
                {{ form_widget(resetForm.plainPassword.second) }}
            </div>
            <div class="row input-group mb-3 ms-1">
                <button class="btn btn-primary">Reset password</button>
            </div>
            {{ form_end(resetForm) }}
        </div>
    </div>
{% endblock %}
