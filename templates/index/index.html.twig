                    {% for cpu in row  %}
                        {% include 'element_templates/card.html.twig' with {'card': cpu} %}
                    {% endfor %}
                </div>
            {% endfor %}
            <h4 class="text-body-emphasis">Motherboards</h4>
            {% for row in mbs|batch(4) %}
