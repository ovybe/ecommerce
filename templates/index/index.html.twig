                <li>
                    <a href="{{ path('app_catalog',{value:''}) }}" class="bg-transparent text-body-emphasis text-decoration-none ms-1">Accesorii</a>
                </li>
            </ul>
        </div>
        <div class="col-10">
            <h4 class="text-body-emphasis">GPUs</h4>
            {% for row in gpus|batch(4) %}
