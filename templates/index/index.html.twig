            {% endfor %}
            <h4 class="text-body-emphasis">PSUs</h4>
            {% for row in psus|batch(4) %}
            <div class="row bg-transparent">
                {% for psu in row  %}
                    {% include 'element_templates/card.html.twig' with {'card': psu} %}
                {% endfor %}
            </div>
            {% endfor %}
            <h4 class="text-body-emphasis">PC Cases</h4>
            {% for row in cases|batch(4) %}
            <div class="row bg-transparent">
                {% for case in row  %}
