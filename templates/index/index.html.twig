{% block body %}
<div class="container">
    <div class="row">
        <div class="col-2">
            <ul style="list-style: none;">
                <li class="mb-2 p-1">
                    <a class="text-body-emphasis text-decoration-none">Categorii</a>
                </li>
                <li>
                    <a href="{{ path('app_catalog',{value:'gpu'}) }}" class="bg-transparent text-body-emphasis text-decoration-none ms-1">Placi Video</a>
                </li>
                <li>
                    <a href="{{ path('app_catalog',{value:'cpu'}) }}" class="bg-transparent text-body-emphasis text-decoration-none ms-1">Procesoare</a>
                </li>
                <li>
                    <a href="{{ path('app_catalog',{value:'motherboard'}) }}" class="bg-transparent text-body-emphasis text-decoration-none ms-1">Placi de baza</a>
                </li>
                <li>
                    <a href="{{ path('app_catalog',{value:'memory'}) }}" class="bg-transparent text-body-emphasis text-decoration-none ms-1">Memorii</a>
                </li>
                <li>
                    <a href="{{ path('app_catalog',{value:'ssd'}) }}" class="bg-transparent text-body-emphasis text-decoration-none ms-1">SSD</a>
                </li>
                <li>
                    <a href="{{ path('app_catalog',{value:'ssd'}) }}" class="bg-transparent text-body-emphasis text-decoration-none ms-1">Hard disk-uri</a>
                </li>
                <li>
                    <a href="{{ path('app_catalog',{value:'psu'}) }}" class="bg-transparent text-body-emphasis text-decoration-none ms-1">Surse</a>
