{% block body %}
    <div class="container bg-white rounded border mt-3">
        <a href="/">Home</a>/<a href="/">Template</a>/<span href="/template/{{ template.uid }}">{{ template.templateName }}</span>
        <h3 class="mb-0">{{ template.templateName }}</h3>
        <p>UID: <span id="uid">{{ template.uid }}</span></p>
        <div class="row mt-3">
{#            <div  class="col-12 table-responsive">#}
{#                <h4>Specifications</h4>#}
