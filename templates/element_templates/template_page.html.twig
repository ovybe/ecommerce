{#                    {{ block(product.category.categoryName|lower~'info') }}#}
{#                </ul>#}
{#            </div>#}
            <div class="cart-btn mb-1">
                <button class="btn btn-success col-12 col-lg-4" id="add-all-to-cart">Add all to cart</button>
            </div>
            <div class="row items">
                {%  for item in template.cartItems %}
                        {% include 'element_templates/card.html.twig' with {'card': item.product} %}
                {% endfor %}
            </div>
            <div  class="col-12">
                <h4>Full Description</h4>
                <div>
                    {{ template.templateDescription | raw }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascriptsend %}
<script src="/js/template_cart.js"></script>
{% endblock %}