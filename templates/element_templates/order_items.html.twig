{% for item in cart.items %}
<tr>
  <th class="ps-0 py-3 border-light" scope="row">
    <div class="d-flex align-items-center"><a class="reset-anchor d-block animsition-link" href="{{ path('app_product', {id:item.product.uid}) }}">
      <img src="{% if item.product.thumbnail is empty %} https://upload.wikimedia.org/wikipedia/commons/thumb/6/65/No-Image-Placeholder.svg/1665px-No-Image-Placeholder.svg.png {% else %}/thumbnails/{{ item.product.thumbnail }}{% endif %}" alt="Item Thumbnail" width="70"></a>
      <div class="ms-3"><strong class="h6"><a class="reset-anchor animsition-link" href="{{ path('app_product', {id:item.product.uid}) }}">{{ item.product.name }}</a></strong></div>
    </div>
  </th>
  <td class="p-3 align-middle border-light">
    <p class="mb-0 small">{{ item.product.price }} RON</p>
  </td>
  <td class="p-3 align-middle border-light">
    <div class="border d-flex align-items-center justify-content-between px-3 bg-white q-div">
      {#                                        <div class="me-2 d-none d-md-inline-block col-lg-3"><span class="small text-uppercase text-secondary headings-font-family">Quantity</span></div>#}
      {#                                        FONT FAMILY HAS ISSUES #}
      <button class="btn p-0 col-lg-3 q-dec" data-index="{{ loop.index-1 }}"><i class="fas fa-caret-left"></i></button>
      <div class="col-lg-3">
        <input class="form-control form-control-sm border-0 shadow-0 p-0 text-center q-input bg-white" disabled data-index="{{ loop.index-1 }}" type="number" value="{{ item.quantity }}">
      </div>
      <button class="btn p-0 col-lg-3 q-inc" data-index="{{ loop.index-1 }}"><i class="fas fa-caret-right"></i></button>
    </div>
  </td>
  <td class="p-3 align-middle border-light">
    <p class="mb-0 small">{{ item.total }} RON</p>
  </td>
  <td class="p-3 align-middle border-light order-item"><a class="reset-anchor order-rbtn" href="javascript:void(0)" data-id="{{ item.id }}"><i class="fas fa-trash-alt small text-muted"></i></a></td>
</tr>
{% endfor %}