    <body {% block bodystyle %} {% endblock %}>
    {% block navbar %}
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">PC Store</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link {% block navhome %}{% endblock %}" aria-current="page" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/pcbuilder">PC Builder</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Catalog
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#">Componente</a></li>
                            <li><a class="dropdown-item" href="#">Accesorii</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#">Sisteme</a></li>
                        </ul>
                    </li>
                </ul>
                <form class="d-flex w-50 ms-0" role="search">
                    <input class="form-control me-2" type="search" placeholder="Denumire sau cod produs..." aria-label="Search">
                    <button class="btn btn-outline-dark" type="submit">Search</button>
                </form>
                {% if is_granted("ROLE_USER") %}
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="btn btn-outline-dark me-1" href="/cart/"><i class="bi bi-cart3"></i>Cart</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">Logout</a>
                    </li>
                </ul>
                    {% else %}
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="btn btn-outline-dark me-1" href="/cart/"><i class="bi bi-cart3"></i>Cart</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-outline-dark" href="/login">Login</a>
                    </li>
                </ul>
                {% endif %}
            </div>
        </div>
    </nav>
        <img src="https://i.pinimg.com/originals/92/42/d9/9242d9ef0ba2d70e74a1997bbf4960d7.jpg" height="250px" width="100%">
    {% endblock %}
